{
  "name": "saika",
  "description": "Effortlessly blogging, done right.",
  "version": "0.6.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "evillt/saika"
  },
  "files": [
    "dist",
    "src",
    "!**/__test__/**"
  ],
  "author": "evillt <ijoec123@gmail.com> (https://evila.me)",
  "main": "dist/saika.js",
  "module": "src/index.js",
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && echo lol",
    "build": "poi --prod --config build/lib.config.js",
    "prepublishOnly": "npm run build",
    "website": "poi -s --config build/website.config.js",
    "website:build": "poi --prod --config build/website.config.js",
    "now-build": "npm run website:build"
  },
  "dependencies": {
    "jump.js": "^1.0.2",
    "loadjs": "^3.6.1",
    "medium-zoom": "^1.0.4",
    "prismjs": "^1.17.1",
    "vue": "^2.6.10",
    "vue-content-loader": "^0.2.2",
    "vue-router": "^3.0.7",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "poi": "^12.7.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.17.0",
    "vue-template-compiler": "^2.6.10",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended",
      "plugin:vue/essential"
    ],
    "prettier": true,
    "ignores": [
      "**/website/**",
      "**/dist/**"
    ],
    "envs": [
      "browser"
    ],
    "globals": [
      "__SAIKA_VERSION__",
      "__PRISM_VERSION__"
    ],
    "extensions": [
      "vue"
    ],
    "rules": {
      "unicorn/no-abusive-eslint-disable": "off",
      "unicorn/filename-case": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue,css,md,json}": [
      "xo --fix",
      "git add"
    ]
  }
}
